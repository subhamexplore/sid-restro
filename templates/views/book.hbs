<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>

<style>

  .bg-form-bk {
    background-image: url('/bg.jpg');
    background-repeat: no-repeat;
    background-size: cover;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

  .bookHead {
    color: rgb(255, 255, 255);
    font-size: 2.2rem;
    text-align: center;
  }

  .form-container {
    background-color: #ffffff46;
    color: rgb(0, 0, 0);
    font-weight: 700;
    padding: 2.5rem;
    font-size: 1.2rem;
    border-radius: 10px;
  }

  #bookBtn {
    width: 5rem;
    height: 2.5rem;
    background-color: rgb(71, 235, 71);
    border-radius: 7px;
    border: none;
    font-size: 1.2rem;
    font-family: 'PT Sans Narrow', sans-serif;
    text-align: center;
  }

  #bookBtn:hover {
    cursor: pointer;
    background-color: white;
    color: rgb(0, 0, 0);
  }
  input{
    background-color: transparent;
    margin-left: 10px;
    border-radius: 5px;
  }
  textarea{
    background-color: transparent;
    border: 0.5px solid black;
  }
</style>

<body>
  {{>navbar}}
  {{!-- <br> --}}
  <!--  -->
  <div class="backg">
    <form method="POST" action="/book" class="bg-form-bk"><br>
      <h1 class="bookHead">Book Your table for a savouring experience</h1><br>
      <div class="form-container">
        <label for="name">Name:</label>
        <input type="text" name="name" /><br /><br />
        <label for="mobile">Mobile Number:</label>
        <input type="number" name="phone" id="mobile" /> <br /><br />
        <label for="date">Date:</label>
        <input type="date" name="date" id="date" /> <br /><br />
        <label for="time-slot">Time slot: </label>
        <select name="slot" id="slot">
          <option>Select an option</option>
          <option id="1" value="9AM-11AM">9AM-11AM</option>
          <option id="2" value="12PM-3PM">12PM-3PM</option>
          <option id="3" value="5PM-7PM">5PM-7PM</option>
          <option id="4" value="8PM-11PM">8PM-11PM</option>
        </select><br /><br />
        <div>Available Seats:<span id="seatCap">100</span></div>
        <br />
        <div>Table for:<input type="number" id="numOfSeats" name="seats" /></div>
        <br />
        <label for="message">Special Message:</label><br />
        <textarea name="messege" id="message" cols="50" rows="4"></textarea><br /><br />
        <button id="bookBtn">Book</button>
      </div>
    </form>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
</body>

<script>
  const login = document.getElementById('login');
  const logout = document.getElementById('logout');

  const authtoken = document.cookie;

  if (authtoken) {
    login.style.display = "none"
    registeration.style.display = "none";
    logout.style.display = "block"
  } else {
    login.style.display = "block"
    registeration.style.display = "block";
    logout.style.display = "none"
  } 

  var seatCap = document.getElementById("seatCap");
  const slot = document.getElementById('slot');

  slot.addEventListener('change', function(){
    var arr = [20, 100, 34, 5];
        const stringVal = slot.value;
    const match = stringVal.match(/^\d+/);
    var ts = parseInt(match[0],10);

        if (ts == 9) {
      seatCap.innerHTML = arr[0];
    }
    else if (ts == 12) {
      seatCap.innerHTML = arr[1];
    }
    else if (ts == 5) {
      seatCap.innerHTML = arr[2];
    }
    else if (ts == 8) {
      seatCap.innerHTML = arr[3];
    }
  })
</script>

</html>